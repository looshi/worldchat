@import url('http://fonts.googleapis.com/css?family=Open+Sans:400,600')

html
  height 100%

body
  font-family 'Open Sans',Helvetica,Arial,sans-serif
  height 100%
  margin 0
  padding 0
  background-color #ccc

#wrap
  height 100%

.message-list
  background-color #ccc
  list-style-type none
  margin 0
  padding 0
  height 100%
  width 400px
  position absolute
  right 0
  overflow-y scroll

.message-list-item
  padding 2px
  margin 2px
  border-radius 3px
  border 1px solid #f1f1f1
  background-color #ddd

.message-list-item .user
  color #777
  font-size .8em
  vertical-align top

#chatInput
  width calc(100% - 408px)
  position absolute
  bottom 4px
  left 4px
  right 4px
  padding 2px 10px
  height 100px

#usernameInput
  position absolute
  bottom 106px
  left 4px
  padding 2px 10px
  height 30px

#earthContainer
  width calc(100% - 400px)
  height calc(100% - 100px)
  position absolute
  background-color yellow
